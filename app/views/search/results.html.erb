<% if @matches.length > 0 %>
  <% @matches.each do |product| %>
    <div class="row">
      <div class="span2">
        <ul class="thumbnails">
          <li>
            <%= link_to product, :class => 'thumbnail' do %>
              <%= image_tag product.thumbnail, :alt => product.name, :size => '150x105' %>
            <% end %>
    	  </li>
        </ul>
      </div>
      <div class="span10">
        <h3><%= link_to product.name, product %></h3>
        <p><%= truncate(product.description, :separator => ' ', :length => 140, :omission => ' ...') %></p>
        <p><%= link_to('Buy Now on etsy.com', product.etsy_url, { :class => 'btn btn-primary' }) %></p>
      </div>
    </div>
  <% end %>

<% else %>
  <p>We couldn't find any products matching your search. How about one of these...</p>
  <p>&nbsp;</p>

  <div class="row">
    <div class="span12">
      <ul class="thumbnails">
        <% @randoms.each do |product|  %>
          <li class="span4">
            <%= link_to(product, { 'class' => 'thumbnail' }) do %>
              <%= image_tag product.thumbnail, :alt => product.name, :size => '350x250' %>
            <% end %>
            <div class="thumbnail-desc">
              <h3><%= product.name %></h3>
              <%= simple_format(truncate(product.description, :separator => ' ', :length => 140, :omission => '&nbsp;...')) %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
