<div class="row">
  <div class="span12">
    
    <h3>All Our Products</h3>

    <% for range in @ranges %>
      <ul class="thumbnails">
        <% for product in range.products %>
          <li class="span2">
            <%= link_to(product, { 'class' => 'thumbnail' }) do %>
              <%= image_tag product.thumbnail, :alt => product.name %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>

  </div>

</div>
