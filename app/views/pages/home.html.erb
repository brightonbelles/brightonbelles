<div id="myCarousel" class="carousel slide">
  <div class="carousel-inner">
    <div class="active item">
      <%= link_to @carousel_products[0] do %>
        <% image_tag 'widepurse01.jpg', :alt => 'Butterfly Handbag' %>
      <% end %>
      <div class="carousel-caption">
        <h4>Our Amazing Butterfly Handbag!</h4>
        <p>Carry your belongings in style with this amazing butterfly patterned handbag</p>
      </div>
    </div>
    <div class="item">
      <%= link_to @carousel_products[1] do %>
        <% image_tag 'frontcushions.jpg', :alt => 'Cushions' %>
      <% end %>
      <div class="carousel-caption">
        <h4>A Selection Of Our Scatter Cushions</h4>
        <p>The perfect addition to any room</p>
      </div>
    </div>
    <div class="item">
      <%= link_to @carousel_products[2] do %>
        <% image_tag 'fronttweed.jpg', :alt => 'Tweed Handbag' %>
      <% end %>
      <div class="carousel-caption">
        <h4>Our Gorgeous Raspberry Tweed Handbag</h4>
        <p>The most fabulous handbag!</p>
      </div>
    </div>
  </div>
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>

