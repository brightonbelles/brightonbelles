<% if @matches.length > 0 %>
  <% @matches.each do |product| %>
    <div class="row">
      <div class="span2">
        <%= link_to product do %>
          <%= image_tag product.thumbnail, :alt => product.name %>
        <% end %>
      </div>
      <div class="span10">
        <h3><%= link_to product.name, product %></h3>
        <p><%= product.description %></p>
      </div>
    </div>
  <% end %>

<% else %>
  <p>No matches</p>
<% end %>
