<div class="row">
  <div class="span12">

    <ul class="breadcrumb">
      <li>
        <%= link_to 'Home', :root %> <span class="divider">/</span>
      </li>
      <li class="active">
        All Collections
      </li>
    </ul>

    <% i = 0 %>
    <% for collection in @collections %>
      <h2><%= collection.name %></h2>
      <ul class="thumbnails">
        <% for product in collection.products %>
          <li class="span2">
            <%= link_to(product, { 'data-target' => "#product#{i}", 'class' => 'thumbnail' }) do %>
              <%= image_tag '160x200.png', :alt => product.name %>
            <% end %>
          </li>
          <% i = i + 1 %>
        <% end %>
      </ul>
    <% end %>

  </div>

</div>
