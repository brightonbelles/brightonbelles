<div class="row">
  <div class="span8">

    <ul class="breadcrumb">
      <li>
        <%= link_to 'Home', :root %> <span class="divider">/</span>
      </li>
      <li>
        <%= link_to @product.product_range.name, @product.product_range %> <span class="divider">/</span>
      </li>
      <li>
        <%= link_to @product.collection.name, @product.collection %> <span class="divider">/</span>
      </li>
      <li class="active">
        <%= @product.name %>
      </li>
    </ul>

    <div id="myCarousel" class="carousel">
      <div class="carousel-inner">
        <div class="active item">
          <%= image_tag @product.image1, :alt => 'First product image' %>
          <div class="carousel-caption">
            <h4><%= @product.carousel_label %></h4>
            <p><%= @product.carousel_detail %></p>
          </div>
        </div>
        <div class="item">
          <%= image_tag @product.image2, :alt => 'Second product image' %>
          <div class="carousel-caption">
            <h4><%= @product.carousel_label %></h4>
            <p><%= @product.carousel_detail %></p>
          </div>
        </div>
        <div class="item">
          <%= image_tag @product.image3, :alt => 'Third product image' %>
          <div class="carousel-caption">
            <h4><%= @product.carousel_label %></h4>
            <p><%= @product.carousel_detail %></p>
          </div>
        </div>
      </div>
      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
    
    <p>
      <div id="facebook" data-likeurl="<%= request.url %>">[Facebook]</div>
      <a href="https://twitter.com/share" class="twitter-share-button"
         data-text="I love this <%= @product.name %>" data-via="BellesBulletin" data-count="horizontal">Tweet</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      <a href="http://pinterest.com/pin/create/button/?url=<%= u request.url %>&media=<%= u asset_url(@product.image1) %>&description=<%= u 'Brighton Belles - Their Awesome ' + @product.name + '!' %>"
         class="pin-it-button" count-layout="horizontal">Pin It</a>
      <script type="text/javascript" src="http://assets.pinterest.com/js/pinit.js"></script>
    </p>

  </div>

  <div class="row">
    <div class="span4">
      <h3><%= @product.name %></h3>
      <%= simple_format @product.description %>

      <div class="buy_button">
        <p><%= link_to('Buy Now on etsy.com', @product.etsy_url, { :class => 'btn btn-large btn-primary' }) %></p>
      </div>

      <h2>Other <%= @range.name %></h2>
      <ul class="thumbnails">
        <% @range_products.each do |product| %>
          <li class="span2">
            <%= link_to(product, { 'class' => 'thumbnail' }) do %>
              <%= image_tag product.thumbnail, :alt => product.name %>
            <% end %>
            <p><%= link_to product.name, product %></p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
